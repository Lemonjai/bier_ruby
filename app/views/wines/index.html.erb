<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Beertype</th>
      <th>Brewery</th>
      <th>Color</th>
      <th>Food</th>
      <th>Occassion</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.title %></td>
        <td><%= wine.beerType %></td>
        <td><%= wine.brewery %></td>
        <td><%= wine.color %></td>
        <td><%= wine.food %></td>
        <td><%= wine.occassion %></td>
        <td><%= wine.rating %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

