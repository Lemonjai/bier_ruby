<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Beertype</th>
      <th>Brewery</th>
      <th>Color</th>
      <th>Food</th>
      <th>Occassion</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.title %></td>
        <td><%= beer.beerType %></td>
        <td><%= beer.brewery %></td>
        <td><%= beer.color %></td>
        <td><%= beer.food %></td>
        <td><%= beer.occassion %></td>
        <td><%= beer.rating %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

