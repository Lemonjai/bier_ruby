<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<% if current_user.try(:beeradmin?) && current_user.try(:admin?) %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Beertype</th>
      <th>Brewery</th>

      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.title %></td>
        <td><%= beer.beerType %></td>
        <td><%= beer.brewery %></td>

        <td><%= beer.rating %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path %>

<% else %>

<p> Only Beer can be shown </p>

<% end %>
